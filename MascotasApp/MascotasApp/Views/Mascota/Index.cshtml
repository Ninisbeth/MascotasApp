@model List<MascotasApp.Models.Mascota>
@{
    ViewBag.Title = "Index";
}

<h2>
    <a href="#" class="btn btn-success right" style="float:right;">Nuevo</a>
    Listado de Mascotas
</h2>
<hr/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Raza</th>
            <th>Edad</th>
            <th>Nombre dueño</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mascota in Model)
        {
            <tr>
                <td>mascota.</td>
                <td>Trusty</td>
                <td>Perro</td>
                <td>5</td>
                <td>Carlos Perez</td>
                <td>
                    <a href="#" class="btn btn-primary">Actualizar</a>
                    <a href="#" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }      
    </tbody>
</table>

